<Window x:Class="STS.Windows.ApplicantMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STS.Windows"
        mc:Ignorable="d"
        Title="ApplicantMainWindow" Height="1080" Width="1920" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1171*"/>
            <ColumnDefinition Width="749*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Name="Toolbar" Grid.Row="0" Grid.ColumnSpan="3" Background="#FF7D7777" MouseDown="Toolbar_MouseDown">
            <StackPanel HorizontalAlignment="Right">
                <Button Height="40" Width="40" Content="X" Background="#FFE61D1D" Click="Button_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
